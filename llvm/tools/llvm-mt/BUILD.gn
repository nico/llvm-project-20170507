import("//llvm/utils/TableGen/tablegen.gni")

tablegen("Opts") {
  visibility = [ ":llvm-mt" ]
  args = [ "-gen-opt-parser-defs" ]
}

executable("llvm-mt") {
  deps = [
    ":Opts",
    "//llvm/lib/Option",
    "//llvm/lib/Support",
    "//llvm/lib/WindowsManifest",
  ]

  # Add include path for generated Opts.inc.inc.
  # FIXME: Should tablegen.gni have a public_config to set this automatically?
  include_dirs = [ "$target_gen_dir" ]
  sources = [
    "llvm-mt.cpp",
  ]
}
